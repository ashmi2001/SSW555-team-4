{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["jest", "node"], // Ensure Jest types are included
    "jsx": "react-native" // Ensure React Native JSX support
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.ts", // Exclude Jest config from TypeScript checks
    "android",
    "ios"
  ]
}
